---
interface Props{
    title : string,
    description? : string
}

const {title, description = "this default description"} = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    <slot>
        <p>{description}</p>
    </slot>
</body>
</html>